{
  "name": "team-axel-e-comm-backend",
  "version": "1.0.0",
  "description": "E-commerce backend API",
  "main": "build/src/server.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node build/src/server.js",
    "dev": "cross-env NODE_ENV=development npx nodemon",
    "build": "node_modules/.bin/rimraf ./build && npx tsc && ncp views build/views && ncp public build/public",
    "test": "cross-env NODE_ENV=test && yarn migration && yarn seed:test && yarn jest --coverage --detectOpenHandles",
    "test:watch": "yarn test -- --watch",
    "coverage": "jest --coverage --detectOpenHandles --coverageReporters=text-lcov | coveralls",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "watch": "tsc -w",
    "migration": "yarn migrate:undo && yarn migrate",
    "migrate": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "migrate:undo": "cross-env NODE_ENV=test npx sequelize-cli db:migrate:undo:all",
    "migrate:dev": "yarn migrate:dev:undo && yarn migrate:dev:all",
    "migrate:dev:all": "cross-env NODE_ENV=development npx sequelize-cli db:migrate",
    "migrate:dev:undo": "cross-env NODE_ENV=development npx sequelize-cli db:migrate:undo:all",
    "seed:dev": "yarn seed:dev:undo && yarn seed:dev:do",
    "seed:dev:do": "cross-env NODE_ENV=development npx sequelize-cli db:seed:all",
    "seed:dev:undo": "cross-env NODE_ENV=development npx sequelize-cli db:seed:undo:all",
    "seed:test": "yarn seed:test:undo && yarn seed:test:do",
    "seed:test:do": "cross-env NODE_ENV=test npx sequelize-cli db:seed:all",
    "seed:test:undo": "cross-env NODE_ENV=test npx sequelize-cli db:seed:undo:all"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "npx eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "connect-session-sequelize": "^7.1.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.1",
    "express-session": "^1.17.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "ncp": "^2.0.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.1",
    "openapi-types": "^12.1.0",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "rimraf": "^4.1.2",
    "sequelize": "^6.28.0",
    "stripe": "^11.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.12",
    "@types/passport-google-oauth2": "^0.1.5",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "coveralls": "^3.1.1",
    "eslint": "8.1.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "lint-staged": "^13.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/e-comm-team-axel25-bn.git"
  },
  "bugs": {
    "url": "https://github.com/atlp-rwanda/e-comm-team-axel25-bn/issues"
  },
  "homepage": "https://github.com/atlp-rwanda/e-comm-team-axel25-bn#readme"
}
